    "require": {
        "bolt/bolt": ">=2.0.0,<3.0.0"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Michael Lee", 
            "email": "michael.lee.0x2a@gmail.com"
        }
    ],
	"minimum-stability" : "dev",
	"prefer-stable" : true,
